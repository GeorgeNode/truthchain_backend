# ===========================================
# TRUTHCHAIN TESTNET API CONFIGURATION
# ===========================================

# Server Configuration
PORT=3002
NODE_ENV=development

# Stacks Blockchain Configuration (TESTNET)
NETWORK=testnet
CONTRACT_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM
CONTRACT_NAME=truthchain_v1_testnet

# MongoDB Configuration (TESTNET DATABASE)
MONGODB_URI=mongodb://localhost:27017/truthchain_testnet
# Production: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/truthchain_testnet

# IPFS Configuration (Pinata)
# Get your API keys from: https://www.pinata.cloud/
# Sign up for free at https://app.pinata.cloud/register
PINATA_API_KEY=your_pinata_api_key_here
PINATA_API_SECRET=your_pinata_api_secret_here
# OR use Pinata JWT (recommended - newer authentication method)
# Get JWT from: https://app.pinata.cloud/keys
PINATA_JWT=your_pinata_jwt_token_here
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs

# Session Configuration
SESSION_EXPIRATION_HOURS=4
SESSION_SECRET=generate_a_secure_random_string

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,chrome-extension://

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_IPFS=true
ENABLE_ANALYTICS=true
ENABLE_CACHE=true
TESTNET_MODE=true
ENABLE_DEBUG_ENDPOINTS=true
